@{
}

@using CodingEvents.Models
@model List<Event>

<h1>Coding Events</h1>

<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>
<p>
    <a asp-controller="Events" asp-action="Delete">Delete Event</a>
</p>

@if (Model.Count == 0)
{
    <p>No events yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Event Name</th>
            <th>Event Description</th>
            <th>Email</th>
        </tr>
        @foreach (var obj in Model)
        {
    <tr>
        <td>@obj.Id</td>
        <td>@obj.Name</td>
        <td>@obj.Description</td>
        <td>@obj.ContactEmail</td>
        <td><a asp-controller="Events" asp-action="Edit" asp-route-eventId="@obj.Id">Edit Event</a></td>
    </tr>
        }
    </table>
}


