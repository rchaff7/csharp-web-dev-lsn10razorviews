@{
}

<h1>Coding Events</h1>

<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>

@if(ViewBag.events.Count == 0)
{
    <p>No events yet!</p>
}

<table>
    <tr>
        <th>Event Name</th>
        <th>Event Description</th>
    </tr>
    @foreach (KeyValuePair<string, string> pair in ViewBag.events)
    {
        <tr>
            <td>@pair.Key</td>
            <td>@pair.Value</td>
        </tr>
    }
</table>
