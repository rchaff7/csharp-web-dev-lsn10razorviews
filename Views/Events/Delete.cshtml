@{
}

<h1>Delete Events</h1>
<form method="post">
    @foreach(var obj in ViewBag.events)
    {
        <div class="form-group">
            <label for="eventIds">@obj.Name</label>
            <input type="checkbox" name="eventIds" value="@obj.Id" />
        </div>
    }

    <input type="submit" value="Delete Selected Events" class="btn btn-danger" />
</form>